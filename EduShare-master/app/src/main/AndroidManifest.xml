<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.edushareproyect">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.per.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_edushare"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_edushare_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EduShareProyect"
        android:usesCleartextTraffic="true">
        <activity android:name=".ActualizarPerfil"></activity>
        <activity android:name=".ChangePassword" />
        <activity android:name=".VerPerfil" />
        <activity android:name=".RecuperarClave" />
        <activity android:name=".CrearGrupo" />
        <activity android:name=".FileUpload" />
        <activity android:name=".AgregarGrupo" />
        <activity android:name=".MailValidation" />
        <activity android:name=".RegistroCatedratico" />
        <activity android:name=".SeleccionarRegistro" />
        <activity android:name=".RegistroAlumno" />
        <activity
            android:name=".VistaPrincipal"
            android:label="@string/title_activity_vista_principal"
            android:theme="@style/Theme.EduShareProyect.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>